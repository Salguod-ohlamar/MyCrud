@model MeuCRUD.Models.Aluno

@{
    ViewData["Title"] = $"Detales {Model.name}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd class = "col-sm-10">
            @Model.DataNascimento.ToString("dd/MM/yyyy")
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Avaliacao)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avaliacao)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-warning"  asp-action="Edit" value="Editar" asp-route-id="@Model?.id"></a>
    <a class="btn btn-info" asp-action="Index">Voltar</a>
   

</div>


